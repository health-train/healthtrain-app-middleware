
<html>
<head>
    <title>HealthTrain video embed</title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="icon" href="/favicon.png">
    <style type="text/css">
        html, body {
            padding:0;
            margin:0;
            width: 100%;
            height: 100%;
        }
        iframe {
            width: 100%;
            height: 100%;
            margin:0;
            border:0;
            display: block;
        }
    </style>
</head>
<body>
<iframe class='sproutvideo-player' src='https://videos.sproutvideo.com/embed/{{video_id}}/{{key_id}}?endFrame=posterFrame&amp;playerTheme=dark&amp;playerColor=5bd1b5' style='position:absolute;width:100%;height:100%;left:0;top:0' frameborder='0' allowfullscreen referrerpolicy='no-referrer-when-downgrade' title='Video Player'></iframe>
<script src="/sproutvideo/player_api.js"></script>
<script type="text/javascript">

    document.addEventListener('DOMContentLoaded', function() {

        var player = new SV.Player({videoId: '{{video_id}}'});

        player.bind('play', function(){
            parent.postMessage('play', '*');
        });

        player.bind('pause', function(){
            if(getTimeRemaining() > 0) {
              parent.postMessage('pause', '*');
            }
        });

        player.bind('mute', function(){
          parent.postMessage('play', '*');
        });

        player.bind('completed', function(){
            parent.postMessage('completed', '*');
        });

        var getTimeRemaining = function() {
          return player.getDuration() - player.getCurrentTime();
        }

    }, false);

</script>
</body>
</html>
